    "keywords": [
        "mcp",
        "model-context-protocol",
        "github-copilot",
        "development-instructions",
        "code-patterns"
    ],
    "author": "amarBitMan",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "better-sqlite3": "^11.0.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^22.0.0",
        "typescript": "^5.5.0"
    }
}